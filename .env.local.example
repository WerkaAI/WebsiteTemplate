# Public site URL used for canonical links and OG URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Application URLs
NEXT_PUBLIC_APP_URL=https://app.example.com

# Contact form configuration
CONTACT_TO_EMAIL=kontakt@example.com
CONTACT_FROM_EMAIL=Formularz <no-reply@example.com>

# Optional: durable rate limiting for contact API (recommended in production)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# CSP / Security headers
# Allowed: report-only | enforce | dual
CSP_MODE=report-only
CSP_REPORT_URI=
