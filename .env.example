# Site configuration
NEXT_PUBLIC_SITE_URL=http://localhost:5000

NEXT_PUBLIC_APP_URL=https://app.autozaba.pl
# NEXT_PUBLIC_APP_URL=https://zabalanding.replit.app

# Cloudflare Turnstile (CAPTCHA)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key_here
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here
TURNSTILE_BYPASS=true

# Resend (Email service)
RESEND_API_KEY=your_resend_api_key_here

# Contact form configuration
CONTACT_TO_EMAIL=kontakt@moja-domena.pl
CONTACT_FROM_EMAIL=Formularz <no-reply@moja-domena.pl>

# Optional: durable rate limiting for contact API (recommended in production)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# CSP / Security headers
# Default without CSP_MODE: report-only locally, dual on Vercel production
# Allowed: report-only | enforce | dual
CSP_MODE=dual
# CSP report endpoint (optional)
CSP_REPORT_URI=

# Analytics & Marketing (leave empty to disable)
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=
# Google Tag Manager
NEXT_PUBLIC_GTM_ID=
# Meta (Facebook) Pixel
NEXT_PUBLIC_META_PIXEL_ID=
# Cookie consent version â€” increment to re-trigger consent banner
NEXT_PUBLIC_COOKIE_CONSENT_VERSION=1.0